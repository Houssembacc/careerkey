        <!-- Section Headline -->

        <!-- Jobs Container -->
        <div class="row">
            <form action="{{ path('formation_front') }}">
                <button style="" class="list-apply-button-ADD-FORM"><i class="fas fa-clock"></i>
                    All
                </button>
            </form>
            <form action="{{ path('formationByExpiredDateFront') }}">
